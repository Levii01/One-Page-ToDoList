<div class="logo row">
  <div class="image logo-content">
  <%= image_tag "todo.png" %>
  </div>
  <div class="logo-title logo-content">
    <span class="center">Your own <br> ToDo list</span>
  </div>
</div>
<div class="clear"></div>
<h3 class="title">Completed Tasks</h3>
<div class="completed-tasks row">
    <% @tasks.complete.each do |task| %>
      <%= render task %>
    <% end %>
</div>

<h3 class="title">Incompleted Tasks</h3>
<div class="my-tasks row">
  <% @tasks.incomplete.each do |task| %>
    <%= render task %>
  <% end %>
</div>

<%= link_to 'New Task', new_task_path, remote: true, class: 'new-task-button' %>
